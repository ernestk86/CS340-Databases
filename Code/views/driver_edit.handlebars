<div class="container-fluid">
  <h1>Edit Driver Data</h1>

  <div class="container">
    <h3>Update {{driver.driver_name}}:</h3>
    <form id="update_driver" action="/driver" method="post">
    <div class="form-group">
      <label for="new_driver_name">Name</label>
      <input type="text" name="name" class="form-control" maxlength="255" value="{{driver.driver_name}}">
    </div>
    <div class="form-group">
      <label for="new_driver_dob">Birth Date</label>
      <input type="date" name="dob" class="form-control" value="{{driver.driver_dob}}">
    </div>
    <div class="form-group">
      <label for="new_driver_height">Height (in inches)</label>
      <input type="number" name="height" class="form-control" value={{driver.driver_height}}>
    </div>
    <div class="form-group">
      <label for="new_driver_weight">Weight (in pounds)</label>
      <input type="number" name="weight" class="form-control" value={{driver.driver_weight}}>
    </div>
    <div class="form-group">
      <label for="new_driver_team">Team ID#</label>
      <select class="custom-select" name="team_id" id="team_select">
        <option value="">No Team</option>
        {{#each team}}
          <option value="{{id}}">{{team_name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label for="new_driver_vehicle">Vehicle ID#</label>
      <select class="custom-select" name="vehicle_id" id="vehicle_select">
        {{#each vehicle}}
        <option value="{{id}}">{{vehicle_make}} {{vehicle_model}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label for="new_driver_wins">Number of Wins</label>
      <input type="number" name="wins" class="form-control" value={{driver.driver_wins}}>
    </div>
    <button type="submit" class="btn btn-primary" onclick="updateDriver({{driver.id}})">Submit</button>
  </form>
  </div>
</div>
