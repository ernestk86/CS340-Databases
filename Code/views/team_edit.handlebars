<div class="container-fluid">
  <h1>Edit Team Data</h1>

  <div class="container">
    <h3>Update {{team.team_name}}</h3>
    <form id="update_team" action="/driver" method="post">
      <div class="form-group">
        <label for="new_team_name">Team Name</label>
        <input type="text" name="name" class="form-control" maxlength="255" value="{{team.team_name}}">
      </div>
      <button type="submit" class="btn btn-primary" onclick="updateTeam({{team.id}})">Submit</button>
    </form>
  </div>
</div>
