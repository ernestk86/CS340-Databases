<div class="container-fluid">
  <h1>Edit Track Data</h1>

  <div class="container">
    <h3>Update {{track.track_name}}</h3>
    <form id="update_track" action="/driver" method="post">
      <div class="form-group">
        <label for="new_track_name">Track Name</label>
        <input type="text" name="name" class="form-control" id="new_track_name" maxlength="255" value="{{track.track_name}}">
      </div>
      <div class="form-group">
        <label for="new_track_address">Track Address</label>
        <input type="text" name="address" class="form-control" id="new_track_address" maxlength="255" value= "{{track.track_address}}">
        <input type="text" name="city" class="form-control" id="new_track_city" maxlength="255" value= "{{track.track_city}}">
        <input type="text" name="state" class="form-control" id="new_track_state" maxlength="2" value= "{{track.track_state}}">
        <input type="number" name="zip" class="form-control" id="new_track_zip" maxlength="5" value= "{{track.track_zip}}">
      </div>
      <div class="form-group">
        <label for="new_track_length">Track Length (in feet)</label>
        <input type="number" name="length" class="form-control" id="new_track_length" value= "{{track.track_length}}">
      </div>
      <button type="submit" class="btn btn-primary" onclick="updateTrack({{track.id}})">Submit</button>
    </form>
  </div>
</div>
